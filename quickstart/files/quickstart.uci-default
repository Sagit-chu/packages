#!/bin/sh

if [ "$PKG_UPGRADE" != 1 ]; then
    if [ ! -f /etc/config/fstab ]; then
        cat <<-EOF >/etc/config/fstab
config global
	option anon_swap '0'
	option anon_mount '1'
	option auto_swap '1'
	option auto_mount '1'
	option delay_root '5'
	option check_fs '0'

EOF
        /usr/sbin/blockmount.sh 2>/dev/null
    fi
else
    /etc/init.d/quickstart enable
    /etc/init.d/quickstart start
fi

exit 0
